<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cutting Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 h-screen flex flex-col">
<!-- Header -->
<header class="bg-purple-600 text-white py-4 shadow-lg">
    <div class="container mx-auto px-4">
        <h1 class="text-center text-xl font-bold">Cutting Portal</h1>
    </div>
</header>

<!-- Main Content -->
<main class="flex-grow flex">
    @RenderBody()
</main>

<!-- Footer (Optional) -->
<footer class="text-center text-sm text-gray-500 py-2">
    &copy; 2025 Cutting Portal
</footer>
</body>
</html>
