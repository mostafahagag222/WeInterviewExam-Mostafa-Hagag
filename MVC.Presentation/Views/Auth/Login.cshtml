@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MVC.Presentation.Models.LoginViewModel

<div class="bg-white shadow-md rounded-lg p-8 w-full max-w-sm">
    <h2 class="text-xl font-semibold text-gray-700 text-center">Sign In</h2>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="text-red-600 text-sm">@ViewBag.ErrorMessage</div>
    }
    <form method="post" asp-action="Login">
        <div class="mb-4">
            <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
            <input name="username" id="username" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" required/>
        </div>
        <div class="mb-4">
            <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
            <input name="password" id="password" type="password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" required/>
        </div>
        <button type="submit" class="w-full bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700">
            Sign In
        </button>
    </form>
</div>